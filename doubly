
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Structure for a webpage node
struct Node {
    char url[100];
    struct Node* prev;
    struct Node* next;
};

// Global pointer to keep track of current page
struct Node* current = NULL;

// Function to create a new node for a webpage
struct Node* createNode(char* url) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    strcpy(newNode->url, url);
    newNode->prev = NULL;
    newNode->next = NULL;
    return newNode;
}

// Operation 1: Visit a new page
void visitNewPage(char* url) {
    // Step 1: Create a new node
    struct Node* newNode = createNode(url);

    // Step 2: Link new node with current
    newNode->prev = current;
    newNode->next = NULL;

    // Step 3: If current is not NULL, update current->next
    if (current != NULL) {
        current->next = newNode;
    }

    // Step 4: Move current to new node
    current = newNode;

    // Step 5: Print confirmation
    printf("Visited: %s\n", current->url);
}

// Operation 2: Go back
void goBack() {
    // Check if going back is possible
    if (current == NULL || current->prev == NULL) {
        printf("Cannot go back!\n");
    } else {
        // Move current pointer to previous
        current = current->prev;
        printf("Moved back to: %s\n", current->url);
    }
}

// Operation 3: Go forward
void goForward() {
    // Check if going forward is possible
    if (current == NULL || current->next == NULL) {
        printf("Cannot go forward!\n");
    } else {
        // Move current pointer to next
        current = current->next;
        printf("Moved forward to: %s\n", current->url);
    }
}

// Operation 4: Display current page
void displayCurrent() {
    if (current == NULL) {
        printf("No page visited yet.\n");
    } else {
        printf("Current page: %s\n", current->url);
    }
}

// Free all allocated memory (optional cleanup)
void freeAllPages() {
    struct Node* temp = current;

    // Move to the first node
    while (temp && temp->prev != NULL) {
        temp = temp->prev;
    }

    // Free from beginning to end
    while (temp != NULL) {
        struct Node* nextNode = temp->next;
        free(temp);
        temp = nextNode;
    }
}

int main() {
    int choice;
    char url[100];

    do {
        // Display menu options
        printf("\n--- Browser Navigation Menu ---\n");
        printf("1. Visit new page\n");
        printf("2. Go back\n");
        printf("3. Go forward\n");
        printf("4. Display current page\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        // Perform operations based on user choice
        switch(choice) {
            case 1:
                printf("Enter URL: ");
                scanf("%s", url);
                visitNewPage

